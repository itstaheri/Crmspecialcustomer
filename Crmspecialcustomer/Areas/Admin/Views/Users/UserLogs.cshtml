@using User.Application.Contract.UserLog;
@using Frameworks;
@model Crmspecialcustomer.HostFrameworks.Pagination.PaginationViewModel<UserLogViewModel>;
<style>
    .table {
        overflow-y: scroll;
        box-shadow: 2px 0 2px 0 gray;
        border-radius: 2px;
        text-align:center;
        overflow-x:auto;
    }

    thead {
        background-color: aqua;
    }
</style>
    <div class="col-12 col-xl-12">
    <h3>آخرین لاگ ها</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>نام کاربری</th>
                    <th>عملیات</th>
                    <th>تاریخ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Models)
                {
                    <tr>

                        <td>@item.UserName</td>
                        <td style="color:purple">@item.Action</td>
                        <td>@item.ActionDate.ToFarsiFull()</td>
                    </tr>
                }

            </tbody>

        </table>
    </div>

     <!--Pagination-->
         <div style="padding:15px">
                <div class="footable-pagination-wrapper">
                <ul class="pagination">
                    <li class="footable-page-nav disabled" data-page="prev"><a asp-action="Index" asp-route-PageId="@(Model.CurrentPage-1)" class="footable-page-link">‹</a></li>
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="footable-page visible @(Model.CurrentPage == i ? "active" : "")" data-page="1"><a asp-action="Index" asp-route-PageId="@i" class="footable-page-link">@i</a></li>

                    }
                    <li class="footable-page-nav" data-page="next"><a asp-action="Index" asp-route-PageId="@(Model.CurrentPage+1)" class="footable-page-link">›</a></li>
                </ul><div class="divider"></div><span class="label label-default">1 of 3</span>
            </div>
         </div>